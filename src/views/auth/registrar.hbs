<div class="container p-2">
    <div class="row">
        <div class="col-md-12">
             <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Crear Usuario</h3>
                </div>
                <div class="card-body">
                    <form action="/registrar" method="post">
                       <div class="row">
                           <div class="col-md-6">
                               <div class="form-group">
                                   <label for="">Asigne usuario a un empleado :</label>
                                   
                                <select name="usuario" id="" class="form-control form-control-sm">
                                    {{#each empleados}}
                                     <option value="{{Cedula}}">{{Nombre}} {{Apellido_1}}</option>
                                    {{/each}}
                                </select>
                               </div>
                               <div class="form-group">
                                   <label for="">contraseña:</label>
                                   <input type="text" name="password"  class="form-control form-control-sm" placeholder="Ingrese la contraseña">
                               </div>
                               <div class="form-group">
                                   <label for="">Escoja un rol de usuario:</label>
                                   <select name="rol" id="" class="form-control form-control-sm">
                                       {{#each roles}}
                                       <option value="{{codigo_rol}}">{{Nombre}}</option>
                                       {{/each}}
                                   </select>
                                   
                               </div>
                               
                           </div>
                           
                       </div>
                        
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block"> Crear usuario</button>
                    </div>
                    </form>
                </div>
            </div>

        </div>
           
    </div>
</div>