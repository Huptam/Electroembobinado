 <h3 class="">Editar cliente</h3>
 <div class="row p-2">
    
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
              

             <form action="/clientes/editar/{{cliente.identificacion}}/{{direccion.Codigo}}" method="POST">
            
                          <div class="form-group">
                            <label for="">Cedula</label>
                            <input value="{{cliente.identificacion}}" class="form-control form-control-sm" name="identificacion" type="number">
                            </div>
                          <div class="form-group">
                            <label for="">Nombres (*)</label>
                            <input value="{{cliente.Nombre}}" class="form-control form-control-sm" name="Nombre" type="text">
                            </div>
                        
                   </div>
                   <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                          <div class="form-group">
                            <label for="">Apellidos (*)</label>
                            <input value="{{cliente.Apellidos}}" class="form-control form-control-sm" name="Apellidos" type="text">
                            </div>
                          <div class="form-group">
                            <label for="">Telefono (*)</label>
                            <input value="{{cliente.Telefono}}" class="form-control form-control-sm" name="Telefono" type="text">
                            </div>
                          
                         
                    </div>
         <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
           <h3>Informacion de contacto</h3>
           <hr>
           <div class="col-md-6">
              <div class="form-group">
             <label for="">Municipio</label>
             <input value="{{direccion.Municipio}}" type="text" name="Municipio"  class="form-control form-control-sm">
           </div>
            <div class="form-group">
             <label for="">Barrio</label>
             <input value="{{direccion.Barrio}}" type="text" name="Barrio"  class="form-control form-control-sm">
           </div>
           </div>
          <div class="col-md-6">
            <div class="form-group">
             <label for="">Calle</label>
             <input value="{{direccion.Calle}}" type="text" name="Calle"  class="form-control form-control-sm">
           </div>
            <div class="form-group">
             <label for="">Carrera</label>
             <input value="{{direccion.Carrera}}" type="text" name="Carrera"  class="form-control form-control-sm">
           </div>
         </div>
         <div class=" form-group">
                     <button class="btn  btn-success" type="submit">Agregar</button>
                  </div> 
          </div>
         </form>
     </div>
 </div>